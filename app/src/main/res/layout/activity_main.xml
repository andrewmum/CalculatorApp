<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F4F4"
    android:weightSum="6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="30sp"
        android:background="#ABEAFA"
        android:gravity="center|right"
        android:text="737"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp"
        />

        <LinearLayout
            tools:ignore="ExtraText,Suspicious0dp"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:weightSum="4">


            <Button
                android:id="@+id/ac"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:text="AC"
                android:layout_margin="5dp"
                android:textColor="#ff0000"
                android:textSize="30dp"
                android:textStyle="bold"
                android:onClick="ButtonClick"

                android:background="#c9eff5"
                tools:ignore="Suspicious0dp" />
            <Button
                android:id="@+id/power"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:text="^"
                android:layout_margin="5dp"
                android:textColor="#ff0000"
                android:textSize="30dp"
                android:textStyle="bold"
                android:onClick="ButtonClick"

                android:background="#c9eff5"
                tools:ignore="Suspicious0dp" />
            <Button
                android:id="@+id/back"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:text="back"
                android:layout_margin="5dp"
                android:textColor="#ff0000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:onClick="ButtonClick"

                android:background="#c9eff5"
                tools:ignore="Suspicious0dp" />
            <Button
                android:id="@+id/division"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:text="/"
                android:layout_margin="5dp"
                android:textColor="#ff0000"
                android:textStyle="bold"
                android:onClick="ButtonClick"

                android:textSize="30dp"
                android:background="#c9eff5"
                tools:ignore="Suspicious0dp" />


        </LinearLayout>
    <LinearLayout
        tools:ignore="ExtraText,Suspicious0dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:weightSum="4">


        <Button
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="7"
            android:layout_margin="5dp"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:onClick="ButtonClick"

            android:textSize="30dp"
            android:background="#c9eff5"
            tools:ignore="Suspicious0dp" />
        <Button
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="8"
            android:layout_margin="5dp"
            android:textColor="#ff0000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"

            android:background="#c9eff5"
            tools:ignore="Suspicious0dp" />
        <Button
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="9"
            android:layout_margin="5dp"
            android:textColor="#ff0000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"

            android:background="#c9eff5"
            tools:ignore="Suspicious0dp" />
        <Button
            android:id="@+id/multiply"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="x"
            android:layout_margin="5dp"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:onClick="ButtonClick"

            android:background="#c9eff5"
            tools:ignore="Suspicious0dp" />


    </LinearLayout>
    <LinearLayout
        tools:ignore="ExtraText,Suspicious0dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:weightSum="4">


        <Button
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="4"
            android:layout_margin="5dp"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:onClick="ButtonClick"

            android:textSize="30dp"
            android:background="#c9eff5"
            tools:ignore="Suspicious0dp" />
        <Button
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="5"
            android:layout_margin="5dp"
            android:textColor="#ff0000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"

            android:background="#c9eff5"
            tools:ignore="Suspicious0dp" />
        <Button
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="6"
            android:layout_margin="5dp"
            android:textColor="#ff0000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"

            android:background="#c9eff5"
            tools:ignore="Suspicious0dp" />
        <Button
            android:id="@+id/minus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="-"
            android:layout_margin="5dp"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:onClick="ButtonClick"

            android:background="#c9eff5"
            tools:ignore="Suspicious0dp" />


    </LinearLayout>
    <LinearLayout
        tools:ignore="ExtraText,Suspicious0dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:weightSum="4">


        <Button
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="1"
            android:layout_margin="5dp"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:onClick="ButtonClick"

            android:textSize="30dp"
            android:background="#c9eff5"
            tools:ignore="Suspicious0dp" />
        <Button
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="2"
            android:layout_margin="5dp"
            android:textColor="#ff0000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"

            android:background="#c9eff5"
            tools:ignore="Suspicious0dp" />
        <Button
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="3"
            android:layout_margin="5dp"
            android:textColor="#ff0000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"

            android:background="#c9eff5"
            tools:ignore="Suspicious0dp" />
        <Button
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="+"
            android:layout_margin="5dp"
            android:onClick="ButtonClick"

            android:textColor="#ff0000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:background="#c9eff5"
            tools:ignore="Suspicious0dp" />


    </LinearLayout>
    <LinearLayout
        tools:ignore="ExtraText,Suspicious0dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:weightSum="4">


        <Button
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="0"
            android:layout_margin="5dp"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:onClick="ButtonClick"

            android:textSize="30dp"
            android:background="#c9eff5"
            tools:ignore="Suspicious0dp" />
        <Button
            android:id="@+id/point"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="."
            android:layout_margin="5dp"
            android:textColor="#ff0000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"

            android:background="#c9eff5"
            tools:ignore="Suspicious0dp" />
        <Button
            android:id="@+id/ans"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="ans"
            android:layout_margin="5dp"
            android:textColor="#ff0000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"

            android:background="#c9eff5"
            tools:ignore="Suspicious0dp" />
        <Button
            android:id="@+id/equal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="="
            android:layout_margin="5dp"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:onClick="ButtonClick"

            android:textSize="30dp"
            android:background="#c9eff5"
            tools:ignore="Suspicious0dp" />


    </LinearLayout>





</LinearLayout>